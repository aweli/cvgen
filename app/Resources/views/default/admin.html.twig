{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div class="container">
            {{ form_start(form) }}

            <p>You'll be able to access your personal cv
                at {{ url('candidacy', {'identifier' : 'example-identifier'}) }}</p>

            {{ form_row(form.identifier) }}
            {{ form_row(form.firstName) }}
            {{ form_row(form.lastName) }}
            {{ form_row(form.email) }}
            {{ form_row(form.github) }}
            {{ form_row(form.skype) }}
            <hr/>
            {{ form_row(form.document) }}
            <hr/>
            <ul id="skill-fields-list"
                data-prototype="{{ form_widget(form.skills.vars.prototype)|e }}<hr/>">

                {{ form_row(form.skills) }}
            </ul>

            <p>
                <a href="javascript:;" id="add-another-skill">Add skill</a>
            </p>

            <button type="submit" title="Save">Save</button>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        // keep track of how many skill fields have been rendered
        var skillCount = '{{ form.skills|length }}';
    </script>

    <script src="https://code.jquery.com/jquery-3.1.1.slim.min.js"
            integrity="sha256-/SIrNqv8h6QGKDuNoLGA4iret+kyesCkHGzVUUV0shc=" crossorigin="anonymous"></script>
    <script src="/js/app.js"></script>
{% endblock %}
