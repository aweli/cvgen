{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link href="/css/admin.css" type="text/css" rel="stylesheet"/>
{% endblock %}

{% block body %}

    <div id="wrapper">
        <div class="container">
            <div class="col-md-6">
                <p>
                    <a href="javascript:window.history.back();">Back to website</a>
                </p>

                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                <div class="alert alert-info" role="alert">Your webpage will be published at
                    <em>{{ url('candidacy', {'identifier' : 'example-identifier'}) }}</em></div>

                {{ form_row(form.identifier) }}
                {{ form_row(form.firstName) }}
                {{ form_row(form.lastName) }}
                {{ form_row(form.email) }}
                {{ form_row(form.github) }}
                {{ form_row(form.skype) }}
                {{ form_row(form.document) }}
                <ul id="skill-fields-list"
                    data-prototype="{{ form_widget(form.skills.vars.prototype)|e }}<hr/>">

                    {{ form_row(form.skills) }}
                </ul>

                <p>
                    <a href="javascript:;" id="add-another-skill">Add skill</a>
                </p>

                <button type="submit" class="btn btn-default" title="Save">Save</button>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        // keep track of how many skill fields have been rendered
        var skillCount = '{{ form.skills|length }}';
    </script>
{% endblock %}
