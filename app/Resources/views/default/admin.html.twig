{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div class="container">
            {{ form_start(form) }}

            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email">
            </div>

            <div class="form-group">
            {{ form_row(form.firstName) }}
            </div>
            {{ form_row(form.lastName) }}
            {{ form_row(form.email) }}
            {{ form_row(form.personalDescription) }}
            {{ form_row(form.company) }}

            <ul id="skill-fields-list"
                data-prototype="{{ form_widget(form.skills.vars.prototype)|e }}">

                {% for skillField in form.skills %}
                    <li>
                        {{ form_errors(skillField) }}
                        {{ form_widget(skillField) }}
                    </li>
                {% endfor %}
            </ul>

            <a href="#" id="add-another-skill">Add skill</a>

            <button type="submit" title="{{ 'form.action.submit' | trans }}">{{ 'form.action.submit' | trans }}</button>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        // keep track of how many skill fields have been rendered
        var skillCount = '{{ form.skills|length }}';
    </script>

    <script src="https://code.jquery.com/jquery-3.1.1.slim.min.js"
            integrity="sha256-/SIrNqv8h6QGKDuNoLGA4iret+kyesCkHGzVUUV0shc=" crossorigin="anonymous"></script>
    <script src="/app.js"></script>
{% endblock %}